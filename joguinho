import pygame
import random
import sys

# Inicializa o pygame
pygame.init()

# Configurações da tela
LARGURA = 500
ALTURA = 500
tela = pygame.display.set_mode((LARGURA, ALTURA))
pygame.display.set_caption("Desvie do Quadrado!")

# Cores
BRANCO = (255, 255, 255)
PRETO = (0, 0, 0)
VERMELHO = (200, 0, 0)
AZUL = (0, 0, 200)

# Jogador
player_tam = 50
player_vel = 7

# Inimigo
enemy_tam = 50
enemy_vel = 15

# Fonte
fonte = pygame.font.SysFont("Arial", 30)
fonte_gameover = pygame.font.SysFont("Arial", 50, bold=True)

# Relógio
clock = pygame.time.Clock()


# Função para desenhar tela
def desenhar_tela(player_x, player_y, enemy_x, enemy_y, pontos):
    tela.fill(BRANCO)

    # Jogador (azul)
    pygame.draw.rect(tela, AZUL, (player_x, player_y, player_tam, player_tam))

    # Inimigo (vermelho)
    pygame.draw.rect(tela, VERMELHO, (enemy_x, enemy_y, enemy_tam, enemy_tam))

    # Pontuação
    texto = fonte.render(f"Pontos: {pontos}", True, PRETO)
    tela.blit(texto, (10, 10))

    pygame.display.update()


# Tela de game over
def game_over_screen(pontos):
    tela.fill(BRANCO)

    text1 = fonte_gameover.render("GAME OVER", True, VERMELHO)
    text2 = fonte.render(f"Sua pontuação: {pontos}", True, PRETO)
    text3 = fonte.render("Pressione R para reiniciar ou ESC para sair", True, PRETO)

    tela.blit(text1, (LARGURA//2 - text1.get_width()//2, 150))
    tela.blit(text2, (LARGURA//2 - text2.get_width()//2, 250))
    tela.blit(text3, (LARGURA//2 - text3.get_width()//2, 300))

    pygame.display.update()

    esperando = True
    while esperando:
        for evento in pygame.event.get():
            if evento.type == pygame.QUIT:
                pygame.quit()
                sys.exit()

            if evento.type == pygame.KEYDOWN:
                if evento.key == pygame.K_ESCAPE:
                    pygame.quit()
                    sys.exit()
                if evento.key == pygame.K_r:
                    esperando = False


# Função principal do jogo
def jogo():
    # Posição inicial do player
    player_x = LARGURA // 2 - player_tam // 2
    player_y = ALTURA - player_tam - 10

    # Posição inicial do inimigo
    enemy_x = random.randint(0, LARGURA - enemy_tam)
    enemy_y = -enemy_tam

    pontos = 0
    rodando = True

    while rodando:
        # Eventos
        for evento in pygame.event.get():
            if evento.type == pygame.QUIT:
                pygame.quit()
                sys.exit()

        # Movimento do jogador
        teclas = pygame.key.get_pressed()
        if teclas[pygame.K_LEFT] and player_x > 0:
            player_x -= player_vel
        if teclas[pygame.K_RIGHT] and player_x < LARGURA - player_tam:
            player_x += player_vel

        # Movimento do inimigo
        enemy_y += enemy_vel
        if enemy_y > ALTURA:
            enemy_y = -enemy_tam
            enemy_x = random.randint(0, LARGURA - enemy_tam)
            pontos += 1

        # Colisão
        if (player_x < enemy_x + enemy_tam and
            player_x + player_tam > enemy_x and
            player_y < enemy_y + enemy_tam and
            player_y + player_tam > enemy_y):
            game_over_screen(pontos)
            return # Reinicia o jogo

        # Desenha tudo
        desenhar_tela(player_x, player_y, enemy_x, enemy_y, pontos)
        clock.tick(30)


# Loop principal
while True:
    jogo()